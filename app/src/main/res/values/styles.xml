<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" >
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Widget.ActionBar.Title</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <!-- Card View theme. -->
    <style name="DashboardCardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">@dimen/_2sdp</item>
        <item name="cardElevation">@dimen/_1sdp</item>
        <item name="contentPaddingBottom">@dimen/_11sdp</item>
        <item name="contentPaddingTop">@dimen/_11sdp</item>
        <item name="contentPaddingLeft">@dimen/_7sdp</item>
        <item name="contentPaddingRight">@dimen/_7sdp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="DialogCardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">@dimen/_13sdp</item>
        <item name="cardElevation">@dimen/_1sdp</item>
        <item name="contentPaddingBottom">@dimen/_14sdp</item>
        <item name="contentPaddingTop">@dimen/_14sdp</item>
        <item name="contentPaddingLeft">@dimen/_14sdp</item>
        <item name="contentPaddingRight">@dimen/_14sdp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>
    <style name="DialogCardViewStyle1" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">@dimen/_10sdp</item>
        <item name="cardElevation">@dimen/_1sdp</item>
        <item name="contentPaddingBottom">@dimen/_15sdp</item>
        <item name="contentPaddingTop">@dimen/_2sdp</item>
        <item name="contentPaddingLeft">@dimen/_2sdp</item>
        <item name="contentPaddingRight">@dimen/_2sdp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>
    <style name="CardViewDashboard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/_10sdp</item>
        <item name="cardElevation">@dimen/_2sdp</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

    <style name="CardViewDashboardWhite" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/_5sdp</item>
        <item name="cardElevation">@dimen/_4sdp</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>
    <!-- Edit Text theme. -->
    <style name="EditTextStyle" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:fontFamily">@font/googlesans_regular</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/black_900</item>
        <item name="android:background">@drawable/bg_edit_text</item>
    </style>

    <style name="TextStyle" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:fontFamily">@font/googlesans_regular</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/black_900</item>
        <item name="android:background">@drawable/bg_edit_text</item>
    </style>

    <style name="CardViewDashboardVideos" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/_2sdp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <!-- Bottom navigation text theme. -->
    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <!-- Navigation bar text theme. -->
    <style name="NavDrawerTextStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/black_700</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <!-- Material Button theme. -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ButtonThemeOverlay</item>
    </style>

    <style name="ButtonThemeOverlay">
        <item name="colorPrimary">@color/colorAccent</item>
    </style>

    <!-- Spinner theme. -->
    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/black</item>
    </style>



    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/background</item>
    </style>
</resources>
