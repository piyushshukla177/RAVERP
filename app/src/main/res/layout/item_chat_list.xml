<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvAdminMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/admin_chat_background"
            android:fontFamily="@font/googlesans_regular"
            android:padding="@dimen/_5sdp"
            android:text="@string/hello_blank_fragment"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvAdminDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginVertical="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:fontFamily="@font/googlesans_regular"
            android:textSize="@dimen/_8sdp" />

        <androidx.recyclerview.widget.RecyclerView
            android:orientation="horizontal"
            android:id="@+id/rvAdminAttachment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llAssociate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llAdmin"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/_10sdp">

        <TextView
            android:id="@+id/tvAssociateMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/associate_chat_background"
            android:fontFamily="@font/googlesans_regular"
            android:padding="@dimen/_5sdp"
            android:text="@string/hello_blank_fragment"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvAssociateDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginVertical="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:fontFamily="@font/googlesans_regular"
            android:textSize="@dimen/_8sdp" />

        <androidx.recyclerview.widget.RecyclerView
            android:orientation="horizontal"
            android:id="@+id/rvAssociateAttachment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>