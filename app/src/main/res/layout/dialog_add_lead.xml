<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_10sdp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/two_top_corner_radious"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Add New Record"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/ivClose"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/cross" />
                </LinearLayout>

                <ScrollView
                    android:id="@+id/nsv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    android:scrollbars="none">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/_3sdp"
                            android:weightSum="2">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/googlesans_medium"
                                android:text="@string/projectName"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/black_900"
                                android:textSize="@dimen/_12sdp" />

                            <androidx.appcompat.widget.AppCompatSpinner
                                android:id="@+id/spProjectName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/bg_edit_text" />

                        </androidx.appcompat.widget.LinearLayoutCompat>


                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/_3sdp"
                            android:weightSum="2">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/googlesans_medium"
                                android:text="@string/blockName"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/black_900"
                                android:textSize="@dimen/_12sdp" />

                            <androidx.appcompat.widget.AppCompatSpinner
                                android:id="@+id/spBlockName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/bg_edit_text" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/_3sdp"
                            android:weightSum="2">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/googlesans_medium"
                                android:text="@string/plotNo"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/black_900"
                                android:textSize="@dimen/_12sdp" />

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/etPlotNo"
                                style="@style/TextStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="1" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/_3sdp"
                            android:weightSum="2">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/googlesans_medium"
                                android:text="@string/requesterName"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/black_900"
                                android:textSize="@dimen/_12sdp" />

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/etRequesterName"
                                style="@style/TextStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="1" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/_3sdp"
                            android:weightSum="2">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/googlesans_medium"
                                android:text="@string/mobileNo"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/black_900"
                                android:textSize="@dimen/_12sdp" />

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/etMobileNo"
                                style="@style/TextStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:inputType="number"
                                android:maxLength="10" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/_3sdp"
                            android:weightSum="2">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/googlesans_medium"
                                android:text="@string/emailId"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/black_900"
                                android:textSize="@dimen/_12sdp" />

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/etEmailId"
                                style="@style/TextStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:inputType="textEmailAddress" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/_3sdp"
                            android:weightSum="2">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/googlesans_medium"
                                android:text="@string/assignTo"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/black_900"
                                android:textSize="@dimen/_12sdp" />

                            <androidx.appcompat.widget.AppCompatSpinner
                                android:id="@+id/spAssignTo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/bg_edit_text" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/_3sdp"
                            android:weightSum="2">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/googlesans_medium"
                                android:text="@string/visitStatus"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/black_900"
                                android:textSize="@dimen/_12sdp" />

                            <androidx.appcompat.widget.AppCompatSpinner
                                android:id="@+id/spVisitStatus"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/bg_edit_text" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/_3sdp"
                            android:weightSum="2">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/googlesans_medium"
                                android:text="@string/requestedDate"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/black_900"
                                android:textSize="@dimen/_12sdp" />

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/etRequestedDate"
                                style="@style/TextStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:clickable="false"
                                android:drawableRight="@drawable/ic_date_range"
                                android:editable="false"
                                android:focusable="false"
                                android:hint="dd/mm/yyyy" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/_3sdp"
                            android:weightSum="2">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/googlesans_medium"
                                android:text="@string/status"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/black_900"
                                android:textSize="@dimen/_12sdp" />

                            <androidx.appcompat.widget.AppCompatSpinner
                                android:id="@+id/spStatus"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/bg_edit_text" />

                        </androidx.appcompat.widget.LinearLayoutCompat>


                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/_3sdp"
                            android:weightSum="2">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/googlesans_medium"
                                android:text="@string/note"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/black_900"
                                android:textSize="@dimen/_12sdp" />

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/etNote"
                                style="@style/TextStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="1" />

                        </androidx.appcompat.widget.LinearLayoutCompat>


                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="@dimen/_9sdp"
                            android:weightSum="2">


                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnSubmit"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_30sdp"
                                android:background="@color/middle"
                                android:fontFamily="@font/googlesans_medium"
                                android:text="Submit"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sdp" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnCancel"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:background="@color/red"
                                android:fontFamily="@font/googlesans_medium"
                                android:text="Cancel"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sdp" />


                        </androidx.appcompat.widget.LinearLayoutCompat>


                    </androidx.appcompat.widget.LinearLayoutCompat>


                </ScrollView>


            </androidx.appcompat.widget.LinearLayoutCompat>

            <ImageView
                android:id="@+id/ivScrollDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/_50sdp"
                android:src="@drawable/ic_show_terms" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</layout>